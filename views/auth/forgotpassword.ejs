<%- include('../includes/head.ejs') %>
<link rel="stylesheet" href="/css/styles.css">
</head>

<body>

    <%- include('../includes/navigation.ejs') %>
    <div class="content">

        <% if (errorMessage) { %>
        <div class="msg msg-error">
            <% for (let error of errorMessage) { %>
            <p class="msg-indiv"><%- error %></p>
            <% } %>
        </div>
        <% } %>

        <% if (successMessage) { %>
        <div class="msg msg-success">
            <% for (let success of successMessage) { %>
            <p class="msg-indiv"><%= success %></p>
            <% } %>
        </div>
        <% } %>


        <div id="forgot-password">
            <form method="POST" id="forgot-password-form" action="/forgotpassword">
                <p class="title-login">Recuperar contrase√±a</p>
                <input type="text" placeholder="Email" id="email" name="email" maxlength="254"
                    value="<%= inputEmailLoginForm %>">
                <button type="submit" id="forgot-password-btn">Enviar email</button>
            </form>
        </div>

    </div>
    <%- include('../includes/end.ejs') %>