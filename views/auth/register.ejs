<%- include('../includes/head.ejs') %>
<link rel="stylesheet" href="/css/styles.css">
</head>

<body>
  <%- include('../includes/navigation.ejs') %>
  <div class="content">

    <% if (errorMessage) { %>
    <div class="msg msg-error">
      <% for (let error of errorMessage) { %>
      <p class="msg-indiv"><%= error %></p>
      <% } %>
    </div>
    <% } %>

    <div id="register-page">
      <form id="register-form" action="/register" method="POST">
        <div class="container">
          <p class="title-login">Register</p>
          <!-- <p>Please fill in this form to create an account.</p> -->


          <div id="register-container">
            <div>
              <!-- <label for="email"><b>Email</b></label> -->
              <input type="text" placeholder="Enter Email" name="email" maxlength="254" value="<%= oldInput.email %>">
            </div>

            <!-- <div>
        <label for="password"><b>Password</b></label>
        <div class="div-tooltip"
          data-tip="La constrase単a debe tener al menos 8 caracteres &#xa;La contrase単a debe tener al menos una letra y un numero o caracter especial">
          <input type="password" placeholder="Enter Password" name="password" id="password"
            value="">
        </div>
      </div> -->

            <div class="inputWithIcon">
              <div class="div-tooltip"
                data-tip="La contrase単a debe tener al menos 8 caracteres &#xa;La contrase単a debe tener al menos una letra y un numero o caracter especial">

                <input type="password" placeholder="Password" id="password-field" name="password"
                  value="<%= oldInput.password %>">

                <!-- height, width, viewBox para hacerlo el doble-->
                <svg onclick="hideShowPassword()" fill="#000000" id="open-eye-i" height="28" width="30"
                  viewBox="0 0 10 18" xmlns="https://www.w3.org/2000/svg" class="VhKI7c">
                  <!-- <path d="M0 0h24v24H0z" fill="none"></path> -->
                  <path id="eye-icon" transform="translate(-7, -2)"
                    d="M12 7c2.76 0 5 2.24 5 5 0 .65-.13 1.26-.36 1.83l2.92 2.92c1.51-1.26 2.7-2.89 3.43-4.75-1.73-4.39-6-7.5-11-7.5-1.4 0-2.74.25-3.98.7l2.16 2.16C10.74 7.13 11.35 7 12 7zM2 4.27l2.28 2.28.46.46C3.08 8.3 1.78 10.02 1 12c1.73 4.39 6 7.5 11 7.5 1.55 0 3.03-.3 4.38-.84l.42.42L19.73 22 21 20.73 3.27 3 2 4.27zM7.53 9.8l1.55 1.55c-.05.21-.08.43-.08.65 0 1.66 1.34 3 3 3 .22 0 .44-.03.65-.08l1.55 1.55c-.67.33-1.41.53-2.2.53-2.76 0-5-2.24-5-5 0-.79.2-1.53.53-2.2zm4.31-.78l3.15 3.15.02-.16c0-1.66-1.34-3-3-3l-.17.01z">
                  </path>
                </svg>
              </div>
            </div>

            <!-- <div>
        <label for="confirmPassword"><b>Repeat Password</b></label>
        <input type="password" placeholder="Repeat Password" name="confirmPassword" value="">
      </div> -->

            <div class="inputWithIcon">
              <input type="password" placeholder="Password confirm" id="password-field-confirm" name="confirmPassword"
                value="<%= oldInput.confirmPassword %>">
              <!-- height, width, viewBox para hacerlo el doble-->
              <svg onclick="hideShowPasswordConfirm()" fill="#000000" id="open-eye-i" height="28" width="30"
                viewBox="0 0 10 18" xmlns="https://www.w3.org/2000/svg" class="VhKI7c">
                <!-- <path d="M0 0h24v24H0z" fill="none"></path> -->
                <path id="eye-icon-confirm" transform="translate(-7, -2)"
                  d="M12 7c2.76 0 5 2.24 5 5 0 .65-.13 1.26-.36 1.83l2.92 2.92c1.51-1.26 2.7-2.89 3.43-4.75-1.73-4.39-6-7.5-11-7.5-1.4 0-2.74.25-3.98.7l2.16 2.16C10.74 7.13 11.35 7 12 7zM2 4.27l2.28 2.28.46.46C3.08 8.3 1.78 10.02 1 12c1.73 4.39 6 7.5 11 7.5 1.55 0 3.03-.3 4.38-.84l.42.42L19.73 22 21 20.73 3.27 3 2 4.27zM7.53 9.8l1.55 1.55c-.05.21-.08.43-.08.65 0 1.66 1.34 3 3 3 .22 0 .44-.03.65-.08l1.55 1.55c-.67.33-1.41.53-2.2.53-2.76 0-5-2.24-5-5 0-.79.2-1.53.53-2.2zm4.31-.78l3.15 3.15.02-.16c0-1.66-1.34-3-3-3l-.17.01z">
                </path>
              </svg>
            </div>
            <button type="submit" id="register-btn">Register</button>
          </div>

          <hr>
          <p>By creating an account you agree to our <a id="termsPrivacyModalRegisterLauncher" href="#">Terms &
              Privacy</a></p>

        </div>

        <div class="container signin">
          <p>Already have an account? <a href="/">Sign in</a></p>
        </div>
      </form>
    </div>

    <!-- Modal -->
    <div id="termsPrivacyModalRegister" class="modal">
      <div class="modal-content">
        <span id="close-terms-privacy-modal-register" class="close">&times;</span>
        <p class="terms-title">Terms ans privacy</p>
        <p class="terms-title-2 terms">Terms</p>
        <ol>
          <li>Hablar en Euskera</li>
          <li>Respetar a todos los usuarios</li>
        </ol>
        <p class="terms-title-2">Privacy</p>
        <ol>
          <li>Nosotros no compartimos tus datos con nadie</li>
        </ol>
      </div>
    </div>
  </div>
  <%- include('../includes/end.ejs') %>